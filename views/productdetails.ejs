<%- include('./partials/header') %>

    <div class="flex flex-col lg:flex-row gap-8 px-6 py-20 max-w-7xl mx-auto">
        <!-- Left Section: Product Image and Details -->
        <div class="lg:w-1/3 w-full">
            <!-- Product Image -->
            <div class="border p-4 flex justify-center items-center bg-[<%= proddetails.bgcolor %>]">
                <img class="h-[12rem] object-cover"
                    src="data:image/jpeg;base64,<%= proddetails.image.toString('base64') %>" alt="">
            </div>

            <!-- Additional Details (if any) -->

        </div>

        <!-- Right Section: Product Information and Actions -->
        <div class="lg:w-2/3 w-full">
            <!-- Product Title and Brand -->
            <h1 class="text-xl font-semibold">
                <%= proddetails.name%>
            </h1>
            <p class="text-sm text-gray-500 mt-1">Brand: <a href="#" class="text-blue-500">Daling</a></p>

            <!-- Ratings and Questions -->
            <div class="flex items-center mt-2">
                <span class="text-yellow-400">★★★★★</span>
                <span class="text-gray-600 ml-2">175 Ratings | 11 Answered Questions</span>
            </div>

            <!-- Price and Discount -->
            <div class="mt-4">
                <p class="text-2xl font-bold text-red-500">Rs. <%= proddetails.price - proddetails.discount %>
                </p>
                <p class="text-sm text-gray-500 line-through">Rs. <%= proddetails.price %>
                </p>
                <p class="text-sm text-green-500">-60% Off</p>
            </div>

            <!-- Promotions -->
            <div class="mt-2">
                <p class="text-sm text-orange-500">Promotions: Min. spend Rs. 2,999</p>
            </div>

            <!-- Quantity Selector and Actions -->
            <div class="mt-4 flex items-center">
                <div class="flex items-center border p-2">
                    <button class="text-lg font-semibold px-2">-</button>
                    <input type="text" value="1" class="w-8 text-center border-none outline-none">
                    <button class="text-lg font-semibold px-2">+</button>
                </div>
                <div class="flex gap-4 ml-4">
                    <button class="bg-blue-500 text-white px-6 py-2 rounded">Buy Now</button>
                    <button class="bg-orange-500 text-white px-6 py-2 rounded">
                        <a href="/addtocart/<%=proddetails._id%>"> Add to Cart</a>
                    </button>
                </div>
            </div>

            <!-- Delivery Information -->
            <div class="mt-6">
                <h3 class="font-semibold">Delivery Options</h3>
                <div class="text-sm text-gray-600 mt-2">
                    <p>Sindh, Karachi - Landhi, Zamanabad</p>
                    <p>Standard Delivery: Rs. 145 (Guaranteed by 21-30 Aug)</p>
                    <p>Cash on Delivery Available</p>
                </div>
            </div>

            <!-- Return and Warranty -->
            <div class="mt-6">
                <h3 class="font-semibold">Return & Warranty</h3>
                <div class="text-sm text-gray-600 mt-2">
                    <p>14 days easy return</p>
                    <p>Warranty not available</p>
                </div>
            </div>

            <!-- Seller Information -->
            <div class="mt-6">
                <h3 class="font-semibold">Sold by</h3>
                <div class="text-sm text-gray-600 mt-2">
                    <p><a href="#" class="text-blue-500">DALING CORP</a></p>
                    <p>Positive Seller Ratings: 83%</p>
                    <p>Ship on Time: 99%</p>
                    <p>Chat Response Rate: Not enough data</p>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>