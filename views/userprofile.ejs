<%- include('./partials/header') %>
    <div class="container mx-auto p-4">
        <div class="bg-white shadow-md rounded-lg p-6">
            <div class="text-center">
                <h1 class="text-2xl font-bold text-gray-700">User Profile</h1>
                <p class="text-gray-600">ID: <%= user._id%>
                </p>
            </div>

            <div class="mt-4">
                <div class="flex justify-between items-center">
                    <span class="font-semibold text-gray-700">Full Name:</span>
                    <span class="text-gray-600">
                        <%= user.fullname%>
                    </span>
                </div>
                <div class="flex justify-between items-center mt-2">
                    <span class="font-semibold text-gray-700">Email:</span>
                    <span class="text-gray-600">
                        <%= user.email.replace(/(.{2}).+(.{1}@.+)/, "$1*****$2" ) %>
                    </span>
                </div>
            </div>

            <div class="mt-6">
                <h2 class="text-xl font-bold text-gray-700">Cart</h2>
                <% if(user.cart.length===0){ %>
                    <p class="text-gray-600">Your cart is empty.</p>
                    <% } else{%>
                        <%user.cart.forEach(function(productid){%>
                            <p class="text-gray-600">
                                <%= productid%>
                            </p>
                            <%})%>
                                <% } %>
            </div>

            <div class="mt-6">
                <h2 class="text-xl font-bold text-gray-700">Order</h2>
                <p class="text-gray-600">You have no orders yet.</p>
            </div>

            <div class="mt-8 text-center">
                <a href="/edit-profile" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Edit
                    Profile</a>
                <a href="/logout" class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600 ml-2">Logout</a>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>