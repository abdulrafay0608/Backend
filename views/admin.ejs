<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="/owner/adminpanel">Create Products</a>
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="">Create new product</a>
            </div>
        </div>
        <div class="w-[75%] flex flex-col gap-5 h-screen">
            <a class="text-red-500 cursor-pointer" onclick="deleteAllProductopen()">Delete all</a>
            <div class="flex items-start flex-wrap gap-5">
                <% if(product.length===0) { %>
                    <div class="flex justify-center items-start">
                        <p>User has no create items</p>
                    </div>
                <% } else { %>
                    <% product.forEach(function(product) { %>
                        <div class="w-60 bg-red-500">
                            <div class="w-full flex justify-center items-center h-52 bg-[<%= product.bgcolor %>]">
                                <img class="h-[11rem] object-cover"
                                    src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                    alt="<%= product.name %>">
                            </div>
                            <div class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                                <div>
                                    <h3><%= product.name %></h3>
                                    <h4>â‚¹ <%= product.price %></h4>
                                </div>
                                <!-- <a class="w-7 h-7 flex items-center justify-center rounded-full bg-black" href="">
                                    <i class="ri-add-line"></i>
                                </a> -->
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Modal for confirmation -->
    <div id="deleteModal"
        class="fixed inset-0 bg-black bg-opacity-50 flex items-start justify-center invisible transition-opacity opacity-0">
        <div class="bg-white rounded-lg w-1/3 mt-10 transform transition-all ease-in-out duration-300 -translate-y-full"
            id="modalContent">
            <div class="p-6">
                <h3 class="text-lg font-medium text-gray-900">Remove all products from the list?</h3>
                <p class="mt-2 text-sm text-gray-600">This action will delete all products permanently.</p>
            </div>
            <div class="flex justify-end p-6 border-t border-gray-200">
                <button onclick="deleteAllProductclose()"
                    class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                    Cancel
                </button>
                <button id="deleteButton"
                    class="ml-3 px-4 py-2 text-white bg-[#2abbe8] border border-transparent rounded-md hover:bg-[#229ac0]">
                    Delete
                </button>
            </div>
        </div>
    </div>
<%- include('./partials/footer') %>
